// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "language_models": {
    "openai": {
      "version": "1"
    }
  },
  "assistant": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-7-sonnet-latest"
    },
    "default_open_ai_model": "gpt-4o",
    "version": "2",
    "provider": null
  },
  "features": {
    "edit_prediction_provider": "zed"
  },
  "collaboration_panel": {
    "button": false
  },
  "outline_panel": {
    "button": false
  },
  "chat_panel": {
    "button": false
  },
  "notification_panel": {
    "button": false
  },
  "project_panel": {
    "dock": "left"
  },
  "tab_bar": {
    "show_nav_history_buttons": false
  },
  "toolbar": {
    "quick_actions": false,
    "breadcrumbs": false
  },
  "auto_install_extensions": {
    "catppuccin": true,
    "git-firefly": true,
    "biome": true
  },
  "theme": "Catppuccin Macchiato",
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "inlay_hints": {
    "enabled": true,
    "show_type_hints": false,
    "show_parameter_hints": true,
    "show_other_hints": true
  },
  "terminal": {
    "font_family": "MesloLGS Nerd Font",
    "button": false
  },
  "language_servers": [
    "!biome",
    "!typescript-language-server",
    "!eslint",
    "..."
  ],
  "languages": {
    "Python": {
      "language_servers": ["pyright", "ruff"],
      "format_on_save": "on",
      "formatter": [
        {
          "code_actions": {
            "source.organizeImports.ruff": true,
            "source.fixAll.ruff": true
          }
        },
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ]
    },
    "TypeScript": {
      "language_servers": ["vtsls", "biome"],
      "prettier": {
        "allowed": false
      }
    }
  },
  "lsp": {
    "gopls": {
      "initialization_options": {
        "hints": {
          "assignVariableTypes": true,
          "compositeLiteralFields": true,
          "compositeLiteralTypes": true,
          "constantValues": true,
          "functionTypeParameters": true,
          "parameterNames": true,
          "rangeVariableTypes": true
        }
      }
    },
    "vtsls": {
      "settings": {
        // For JavaScript:
        "javascript": {
          "inlayHints": {
            "parameterNames": {
              "enabled": "all",
              "suppressWhenArgumentMatchesName": false
            },
            "parameterTypes": {
              "enabled": true
            },
            "variableTypes": {
              "enabled": true,
              "suppressWhenTypeMatchesName": true
            },
            "propertyDeclarationTypes": {
              "enabled": true
            },
            "functionLikeReturnTypes": {
              "enabled": true
            },
            "enumMemberValues": {
              "enabled": true
            }
          }
        },
        // For TypeScript:
        "typescript": {
          "inlayHints": {
            "parameterNames": {
              "enabled": "all",
              "suppressWhenArgumentMatchesName": false
            },
            "parameterTypes": {
              "enabled": true
            },
            "variableTypes": {
              "enabled": true,
              "suppressWhenTypeMatchesName": true
            },
            "propertyDeclarationTypes": {
              "enabled": true
            },
            "functionLikeReturnTypes": {
              "enabled": true
            },
            "enumMemberValues": {
              "enabled": true
            }
          }
        }
      }
    },
    "biome": {
      "settings": {
        "require_config_file": true
      }
    },
    "yaml-language-server": {
      "initialization_options": {
        "schemaStore": {
          "enable": true
        }
      }
    },
    "ruff": {
      "initialization_options": {
        "settings": {
          // Ruff server settings goes here
          "lineLength": 120,
          "lint": {
            "extendSelect": ["I"]
          }
        }
      }
    },
    "rust-analyzer": {
      "initialization_options": {
        "inlayHints": {
          "maxLength": null,
          "lifetimeElisionHints": {
            "enable": true
          },
          "bindingModeHints": {
            "enable": true
          },
          "closureReturnTypeHints": {
            "enable": true
          }
        }
      }
    }
  }
}
