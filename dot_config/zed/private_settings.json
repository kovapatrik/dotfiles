// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "colorize_brackets": true,
  "icon_theme": "Catppuccin Macchiato",
  "agent": {
    "use_modifier_to_send": true,
    "default_model": {
      "provider": "anthropic",
      "model": "claude-sonnet-4-5-latest"
    },
    "profiles": {
      "simple": {
        "name": "Simple",
        "tools": {
          "read_file": true,
          "now": true,
          "diagnostics": true,
          "contents": true,
          "grep": true,
          "list_directory": true,
          "open": false
        },
        "enable_all_context_servers": false,
        "context_servers": {}
      }
    },
    "default_profile": "simple"
  },
  "features": {
    "edit_prediction_provider": "zed"
  },
  "collaboration_panel": {
    "button": false
  },
  "outline_panel": {
    "button": false
  },
  "notification_panel": {
    "button": false
  },
  "project_panel": {
    "dock": "left"
  },
  "tab_bar": {
    "show_nav_history_buttons": false
  },
  "edit_predictions": {
    "mode": "subtle"
  },
  "toolbar": {
    "quick_actions": false,
    "breadcrumbs": false
  },
  "auto_install_extensions": {
    "catppuccin": true,
    "git-firefly": true,
    "biome": true,
    "golangci-lint": true
  },
  "theme": "Catppuccin Macchiato",
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "inlay_hints": {
    "enabled": true,
    "show_type_hints": false,
    "show_parameter_hints": true,
    "show_other_hints": true
  },
  "terminal": {
    "font_family": "MesloLGS Nerd Font",
    "button": false
  },
  "language_servers": [
    "!typescript-language-server",
    "!eslint",
    "!biome",
    "!angular",
    "..."
  ],
  "languages": {
    "Python": {
      "language_servers": ["pyright", "ruff"],
      "format_on_save": "on",
      "formatter": [
        { "code_action": "source.organizeImports.ruff" },
        { "code_action": "source.fixAll.ruff" },
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ]
    },
    "TypeScript": {
      "prettier": { "allowed": false }
    },
    "Go": {
      "language_servers": ["gopls", "golangci-lint"]
    }
  },
  "lsp": {
    "gopls": {
      "initialization_options": {
        "hints": {
          "assignVariableTypes": true,
          "compositeLiteralFields": true,
          "compositeLiteralTypes": true,
          "constantValues": true,
          "functionTypeParameters": true,
          "parameterNames": true,
          "rangeVariableTypes": true
        }
      }
    },
    "golangci-lint": {
      "initialization_options": {
        "command": [
          "golangci-lint",
          "run",
          "--output.json.path",
          "stdout",
          "--show-stats=false",
          "--output.text.path="
        ]
      }
    },
    "vtsls": {
      "settings": {
        // For JavaScript:
        "javascript": {
          "inlayHints": {
            "parameterNames": {
              "enabled": "all",
              "suppressWhenArgumentMatchesName": false
            },
            "parameterTypes": {
              "enabled": true
            },
            "variableTypes": {
              "enabled": true,
              "suppressWhenTypeMatchesName": true
            },
            "propertyDeclarationTypes": {
              "enabled": true
            },
            "functionLikeReturnTypes": {
              "enabled": true
            },
            "enumMemberValues": {
              "enabled": true
            }
          }
        },
        // For TypeScript:
        "typescript": {
          "inlayHints": {
            "parameterNames": {
              "enabled": "all",
              "suppressWhenArgumentMatchesName": false
            },
            "parameterTypes": {
              "enabled": true
            },
            "variableTypes": {
              "enabled": true,
              "suppressWhenTypeMatchesName": true
            },
            "propertyDeclarationTypes": {
              "enabled": true
            },
            "functionLikeReturnTypes": {
              "enabled": true
            },
            "enumMemberValues": {
              "enabled": true
            }
          }
        }
      }
    },
    "biome": {
      "settings": {
        "require_config_file": true
      }
    },
    "ruff": {
      "initialization_options": {
        "settings": {
          // Ruff server settings goes here
          "lineLength": 120,
          "lint": {
            "extendSelect": ["I"]
          }
        }
      }
    },
    "rust-analyzer": {
      "initialization_options": {
        "inlayHints": {
          "maxLength": null,
          "lifetimeElisionHints": {
            "enable": true
          },
          "bindingModeHints": {
            "enable": true
          },
          "closureReturnTypeHints": {
            "enable": true
          }
        }
      }
    }
  }
}
